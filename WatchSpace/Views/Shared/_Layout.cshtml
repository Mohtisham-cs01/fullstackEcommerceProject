@using WatchSpace.Helper

@inject IApp_Config _appConfig

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="~/timups/images/favicon.png" type="image/x-icon">

    <title>WatchSpace</title>


    <!-- bootstrap core css -->
    <link href="~/timups/css/bootstrap.css" rel="stylesheet" />
    @*<link rel="stylesheet" type="text/css" href="css/bootstrap.css" />*@
    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- font awesome style -->
    <link href="~/timups/css/font-awesome.min.css" rel="stylesheet" />
    @*<link href="css/font-awesome.min.css" rel="stylesheet" />*@

    <!-- Custom styles for this template -->
    <link href="~/timups/css/style.css" rel="stylesheet" />
    @*<link href="css/style.css" rel="stylesheet" />*@
    <!-- responsive style -->
    <link href="~/timups/css/responsive.css" rel="stylesheet" />
    @*<link href="css/responsive.css" rel="stylesheet" />*@

    <style>

        .PageLoader {
            background: #FFFFFF;
            height: 100vh;
            width: 100%;
            position: fixed;
            z-index: 100;
        }

        .spinner {
            display: block;
            position: fixed;
            z-index: 1031; /* High z-index so it is on top of the page */
            top: 50%;
            right: 50%;
        }
    </style>

</head>

<body>

    <div class="hero_area" style="padding-left:0px;">

        <header class="header_section" style="border-bottom:1px solid black;">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-brand" href="/Home/Index">
                        <span>
                            <img src="~/images/Logo.png" style="width:120px;">
                        </span>
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Products/ProductList"> Shop Now  </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/about"> About Us </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/contact">Contact Us</a>
                            </li>
                            @if (_appConfig.UserID > 0 && _appConfig.UserRole == "User" || _appConfig.UserRole == "Admin")
                            {

                                <li class="nav-item">
                                    <a class="nav-link" href="/Users/UserOrderList">My Orders</a>
                                </li>
                            }
                        </ul>
                        <div class="user_option-box">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/Users/AddEditUser">Register</a>
                                </li>
                                @if (_appConfig.UserID > 0)
                                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Users/LogOut"> LogOut  </a>
                    </li> }
                                else
                                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Users/Login"> Login  </a>
                    </li>}
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->

        @RenderBody()

    </div>

    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-4 footer-col">
                    <div class="footer_detail">
                        <h4>
                            About
                        </h4>
                        <p>
                            At WatchSpace, we understand that buying a watch is a significant investment, which is why we only partner with the most
                            reputable and trusted watch brands in the industry.
                        </p>

                    </div>
                </div>
                <div class="col-md-6 col-lg-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Reach at..
                        </h4>
                        <div class="contact_link_box">
                            <a href="https://goo.gl/maps/dYvZZcY6BVrQGonTA">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    PUGC Gujranwala
                                </span>
                            </a>
                            <a href="https://wa.me/923098448540/">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Call +92 309 8448540
                                </span>
                            </a>
                            <a href="mailto:adilasghar991@gmail.com">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    info.watchspace@gmail.com
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 footer-col">

                    <h4>
                        WatchSpace
                    </h4>

                    <div class="footer_social">
                        <a href="">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-linkedin" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-instagram" aria-hidden="true"></i>
                        </a>
                    </div>

                </div>
            </div>
            <div class="footer-info">
                <p>
                    &copy; <span id="displayYear"></span> All Rights Reserved By
                    <a href="">WatchSpace</a>
                </p>
            </div>
        </div>
    </footer>
    <!-- footer section -->
    <!-- jQery -->
    <script src="~/timups/js/jquery-3.4.1.min.js"></script>
    @*<script src="js/jquery-3.4.1.min.js"></script>*@
    <!-- popper js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <!-- bootstrap js -->
    <script src="~/timups/js/bootstrap.js"></script>
    @*<script src="js/bootstrap.js"></script>*@
    <!-- owl slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <!-- custom js -->
    <script src="~/timups/js/custom.js"></script>
    @*<script src="js/custom.js"></script>*@
    <!-- Google Map -->
    @*<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>*@
    <!-- End Google Map -->

</body>

</html>