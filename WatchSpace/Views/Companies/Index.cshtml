@model IEnumerable<WatchSpace.Models.Company>

@{
    ViewData["Title"] = "Index";
}


<div class="container  py-5">
    <h1>Index</h1>

    <p>
        <a class="btn text-white" style="background: #8019c8;"  asp-action="Create">Create New</a>
    </p>
    <table class="table" border="1" style="border: 2px solid #dee2e6;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img class="d-block mx-auto" style="width:150px; height:120px;" src="@item.Image" />
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>