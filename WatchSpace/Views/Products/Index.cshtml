@model IEnumerable<WatchSpace.Models.Product>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}


<div class="container  py-5">
    <h1>Index</h1>

    <p>
        <a class="btn text-white" style="background: #8019c8;"  asp-action="Create">Create New</a>
    </p>
    <table class="table" border="1" style="border: 2px solid #dee2e6;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Orig_Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Display_Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <center><img style="width:150px;" src="@item.Image" alt="@item.Name" /><br><br></center>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Orig_Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Display_Price)
                    </td>
                    <td>
                        <a class="btn btn-icon btn-round btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> 
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id"><i class="ion ion-ios-information-circle"></i></a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="zmdi zmdi-delete"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>

















